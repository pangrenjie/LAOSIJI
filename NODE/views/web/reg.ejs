<!DOCTYPE html>
<html lang="en">
    <head>
        <title></title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script src="js/jquery.js" charset="utf-8"></script>
        <script src="js/bootstrap.js" charset="utf-8"></script>
        <link rel="stylesheet" href="css/bootstrap.min.css">
        <script src="js/vue.min.js" charset="utf-8"></script>
        <script src='js/ajax.js' charset='utf-8'></script>
        <script>
            window.onload=function(){
                var username=document.getElementById('username');
                var password=document.getElementById('password');
                var passwordagain=document.getElementById('passwordagain');
                var email=document.getElementById('email');
                var phone=document.getElementById('phone');
                var qq=document.getElementById('qq');
                var addr=document.getElementById('addr');
                var username=document.getElementById('username');
                var age=document.getElementById('age');
                var login=document.getElementById('login');
                login.onclick=function(){
                    if(password.value!=passwordagain.value){
                        alert('两次密码不相同，请从新输入！');
                        passwordagain.value='';
                        return false;
                    }else if(username.value=='' && password.value=='' &&  email.value==""){
                        alert('用户名或者密码或者邮箱不能为空！')
                        return false;
                    }else{
                        ajax({
                            url:'/reg',
                            type:'post',
                            data:{
                                username:username.value,
                                password:password.value,
                                email:email.value,
                                phone:phone.value,
                                qq:qq.value,
                                addr:addr.value,
                                age:age.value,
                                act:'reg'
                            },
                            success:function(str){
                            var json=eval("("+str+")");
                            if(json.ok){
                                alert(json.msg);
                                location.replace('/') ;
                            }else{
                                alert(json.msg);
                            }
                            },
                            error:function(){
                                alert('通信失败');
                            }
                        });
                    } 
                }
            }
        </script>
        <style>
            .cont{margin:30px auto;}
        </style>
    </head>
    <body>
        <div class="text-right cont" >
            <h3 class="text-center">用户注册</h3>
            <div class="form-group row">
                <label for="username" class="control-label col-xs-3 ">用户名：</label>
                <div class='col-xs-6'>
                    <input type="text" class='form-control' id='username'>
                </div>
            </div>
            <div class="form-group row">
                <label for="password" class="control-label col-xs-3 ">密码：</label>
                <div class='col-xs-6'>
                    <input type="password" class='form-control' id='password' >
                </div>
            </div>
            <div class="form-group row">
                <label for="passwordagain" class="control-label col-xs-3 ">确认密码：</label>
                <div class='col-xs-6'>
                    <input type="password" class='form-control' id='passwordagain'>
                </div>
            </div>
            <div class="form-group row">
                <label for="email" class="control-label col-xs-3 ">邮箱：</label>
                <div class='col-xs-6'>
                    <input type="text" class='form-control' id='email' >
                </div>
            </div>
            <div class="form-group row">
                <label for="qq" class="control-label col-xs-3 ">qq：</label>
                <div class='col-xs-6'>
                    <input type="text" class='form-control' id='qq' >
                </div>
            </div>
            <div class="form-group row">
                <label for="phone" class="control-label col-xs-3 ">电话：</label>
                <div class='col-xs-6'>
                    <input type="text" class='form-control' id='phone' >
                </div>
            </div>
            <div class="form-group row">
                <label for="addr" class="control-label col-xs-3 ">联系地址：</label>
                <div class='col-xs-6'>
                    <input type="text" class='form-control' id='addr' >
                </div>
            </div>
            <div class="form-group row">
                <label for="age" class="control-label col-xs-3 ">年龄：</label>
                <div class='col-xs-6'>
                    <input type="text" class='form-control' id='age' >
                </div>
            </div>
        </div>
        <div class="form-group row">
            <input type="submit"  value="登录" class='btn btn-primary col-xs-offset-4' id='login'>
            <input type="button"  value="退出" class='btn btn-danger  col-xs-offset-1'  id="back">
            <input type="button"  value="重置" class='btn btn-warning'  id="reset">
        </div>
    </body>
</html>